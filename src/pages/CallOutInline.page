<apex:page standardController="Lead" sidebar="false" showHeader="false" extensions="CalloutUtil">
<head>
    <apex:includeScript value="{!$Resource.jquery110}" />
    <!--<apex:includeScript value="/soap/ajax/34.0/connection.js" />
    <apex:includeScript value="/soap/ajax/34.0/apex.js" />-->
    <script type="text/javascript">
    j$ = jQuery.noConflict();
    j$(document).ready(function() {
        j$("a[id$=phoneNum]").click(function(){
            /*sforce.connection.sessionId = '{!$Api.Session_ID}';
            var s = {phone:"{!Lead.Mobilephone}",idstr:"{!Lead.Id}"};
            var ret=sforce.apex.execute( 'CallOutSingle','send',s);*/
            var s = '{"phone":"Mobile","idstr":"{!Lead.Id}"}';
            send(s);
        });
    });
    function send(param) {
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.CalloutUtil.SingleCallout}',
            param,
            function(result, event){
                if (event.status) {
                   console.log(result);
                } else if (event.type === 'exception') {
                   console.log(result);
                } else {
                   console.log(result);
                }
            },
            {escape: true}
        );
    }
    </script>
    <style>
    .detailList{
        width: 100%;
    }
    .labelCol{
        padding-top: 3px;
        padding-bottom: 3px;
        color: #4a4a56;
        width: 35%;
